{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "rm -rf dist/ && deno run -A --node-modules-dir npm:vite build && (cd dist && zip -r -9 ../app.zip ./)",
    "test": "deno test"
  },
  "compilerOptions": {
    "lib": ["ESNext", "dom", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "exclude": [
    ".vite/",
    "dist/"
  ],
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@deskpro/app-sdk-react-test": "jsr:@deskpro/app-sdk-react-test@^0.0.0",
    "@sentry/react": "npm:@sentry/react@^9.28.1",
    "@types/react": "npm:@types/react@^19.0.10",
    "@types/react-dom": "npm:@types/react-dom@^19.0.4",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "rollup-plugin-copy": "npm:rollup-plugin-copy@^3.5.0",
    "vite": "npm:vite@^6.1.1"
  }
}
